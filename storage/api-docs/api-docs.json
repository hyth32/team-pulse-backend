    "components": {
        "schemas": {
            "AnswerType": {
                "description": "Типы ответов\n *      0 - Текст\n *      1 - Одиночный выбор\n *      2 - Множественный выбор\n *      3 - Оценка\n *      4 - Распределение баллов",
                "type": "integer",
                "enum": [
                    "Text",
                    "SingleChoice",
                    "MultipleChoice",
                    "Scale"
                ],
                "example": 0
            },
            "TestType": {
                "description": "Типы тестов\n *     0 - Готовый\n *     1 - Опрос\n *     2 - 360",
                "type": "integer",
                "enum": [
                    "Prepared",
                    "Survey",
                    "Overall"
                ],
                "example": 0
            },
            "UserRole": {
                "description": "Роли пользователей\n *     0 - Администратор\n *     1 - Руководитель\n *     2 - Сотрудник",
                "type": "integer",
                "enum": [
                    "Admin",
                    "Supervisor",
                    "Employee"
                ],
                "example": 0
            },
            "CreateTestRequest": {
                "description": "Тело запроса для создания теста",
                "properties": {
                    "name": {
                        "description": "Название теста",
                        "type": "string",
                        "example": "New test"
                    },
                    "description": {
                        "description": "Описание теста",
                        "type": "string",
                        "example": "New test description"
                    },
                    "type": {
                        "description": "Тип теста",
                        "type": "integer",
                        "example": 1
                    },
                    "questions": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "topic": {
                                    "description": "Тема вопроса",
                                    "type": "string",
                                    "example": "default"
                                },
                                "text": {
                                    "description": "Текст вопроса",
                                    "type": "string",
                                    "example": "Question 1"
                                },
                                "type": {
                                    "description": "Тип ответа на вопрос",
                                    "type": "integer",
                                    "example": 0
                                },
                                "tags": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "name": {
                                                "description": "Тег вопроса",
                                                "type": "string",
                                                "example": "Tag 1"
                                            }
                                        },
                                        "type": "object"
                                    }
                                },
                                "answers": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "text": {
                                                "description": "Текст вопроса",
                                                "type": "string",
                                                "example": "Answer 1"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            },
                            "type": "object"
                        }
                    },
                    "periodicity": {
                        "properties": {
                            "name": {
                                "description": "Название периодичности",
                                "type": "string",
                                "example": "Каждую неделю"
                            },
                            "timeframe": {
                                "properties": {
                                    "from": {
                                        "description": "Временная метка начала теста",
                                        "type": "integer",
                                        "example": 1740566491
                                    },
                                    "to": {
                                        "description": "Временная метка окончания теста",
                                        "type": "integer",
                                        "example": 1740566491
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    },
                    "start_date": {
                        "description": "Временная метка начала прохождения теста",
                        "type": "integer",
                        "example": 1740566491
                    },
                    "end_date": {
                        "description": "Временная метка окончания прохождения теста",
                        "type": "integer",
                        "example": 1740566491
                    },
                    "groups": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "name": {
                                    "description": "Название группы",
                                    "type": "string",
                                    "example": "Frontend"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "employees": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "description": "ID пользователя",
                                    "type": "string",
                                    "format": "uuid",
                                    "example": "123e4567-e89b-12d3-a456-426614174000"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "UpdateTestRequest": {
                "description": "Тело запроса для обновления теста",
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/CreateTestRequest"
                    }
                ]
            },
            "Answer": {
                "description": "Ответ",
                "properties": {
                    "text": {
                        "description": "Текст ответа",
                        "type": "string"
                    },
                    "image_id": {
                        "description": "ID изображения",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "question_id": {
                        "description": "ID вопроса",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    }
                },
                "type": "object"
            },
            "File": {
                "description": "Файл",
                "properties": {
                    "url": {
                        "description": "Локальный url файла",
                        "type": "string"
                    },
                    "type": {
                        "description": "Тип файла",
                        "type": "string"
                    },
                    "mime_type": {
                        "description": "Mime тип файла",
                        "type": "string"
                    },
                    "original_name": {
                        "description": "Оригинальное имя файла",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "Group": {
                "description": "Группа",
                "properties": {
                    "name": {
                        "description": "Название группы",
                        "type": "string"
                    },
                    "priority": {
                        "description": "Приоритет группы",
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "Question": {
                "description": "Вопрос",
                "properties": {
                    "text": {
                        "description": "Текст вопроса",
                        "type": "text"
                    },
                    "type": {
                        "$ref": "#/components/schemas/AnswerType"
                    },
                    "test_id": {
                        "description": "ID теста",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "topic_id": {
                        "description": "ID темы вопроса",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    }
                },
                "type": "object"
            },
            "QuestionTag": {
                "description": "Теги вопроса",
