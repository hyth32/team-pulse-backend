                "type": "object"
            },
            "Tag": {
                "description": "Тег",
                "properties": {
                    "text": {
                        "description": "Название тега",
                        "type": "string"
                    },
                    "priority": {
                        "description": "Приоритет тега",
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "TagGroup": {
                "description": "Группа тегов",
                "properties": {
                    "tag_id": {
                        "description": "ID тега",
                        "type": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "group_id": {
                        "description": "ID группы",
                        "type": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    }
                },
                "type": "object"
            },
            "Test": {
                "description": "Тест",
                "properties": {
                    "name": {
                        "description": "Название теста",
                        "type": "string"
                    },
                    "description": {
                        "description": "Описание теста",
                        "type": "text"
                    },
                    "type": {
                        "$ref": "#/components/schemas/TestType"
                    },
                    "periodicity": {
                        "description": "ID периодичности",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "start_date": {
                        "description": "Дата начала теста",
                        "type": "string",
                        "format": "date-time"
                    },
                    "end_date": {
                        "description": "Дата окончания теста",
                        "type": "string",
                        "format": "date-time"
                    },
                    "assignee_id": {
                        "description": "ID пользователя, назначившего тест",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    }
                },
                "type": "object"
            },
            "TestGroup": {
                "description": "Группы, назначенные на тест",
                "properties": {
                    "test_id": {
                        "description": "ID теста",
                        "type": "string",
                        "format": "uuid",
                        "example": "123e4567-e89b-12d3-a456-426614174000"
                    },
                    "group_id": {
                        "description": "ID группы",
